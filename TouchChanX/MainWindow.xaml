<Window x:Class="TouchChanX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TouchChanX"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None" Background="Transparent"
        Title="MainWindow" Height="450" Width="800">
    
    <WindowChrome.WindowChrome>
          <WindowChrome GlassFrameThickness="-1" CaptionHeight="0" />
    </WindowChrome.WindowChrome>
    
    <Grid>
        <Border BorderThickness="1" BorderBrush="Red" />
        
        <Button VerticalAlignment="Top" HorizontalAlignment="Left" Content="Click" Click="ButtonBase_OnClick"></Button>
    </Grid>
</Window>
